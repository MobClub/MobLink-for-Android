<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/demo_iv_back"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/shopping_title"
            android:textColor="#000000"
            android:textSize="17dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:text="@string/share"
            android:textColor="@color/blue"
            android:textSize="14dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_shopping_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_goods_icon"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_gravity="center"
                    android:src="@drawable/demo_air_ticket"/>

                <TextView
                    android:id="@+id/tv_goods_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Apple iPhone 7 Plus 32GB 玫瑰金色 移动联通电信4G手机"
                    android:textColor="#000000"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:text="$6388"
                    android:textColor="#ec6159"
                    android:textSize="18dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/shopping_suggestion"
                android:textColor="#000000"
                android:textSize="14dp"/>
            
            <RelativeLayout
                android:id="@+id/rl_goods_sug01"
                android:layout_width="match_parent"
                android:layout_height="81dp">
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d9d9d9"
                    android:layout_alignParentTop="true"/>
                
                <ImageView
                    android:id="@+id/iv_sug_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:src="@drawable/demo_dsxg01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_sug_goods"
                    android:padding="10dp"
                    android:text="@string/goods_sug01_name"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_sug_goods"
                    android:layout_toRightOf="@+id/iv_sug_goods"
                    android:padding="10dp"
                    android:text="@string/goods_sug01_price"
                    android:textColor="#ec6159"
                    android:textSize="14dp"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_goods_sug02"
                android:layout_width="match_parent"
                android:layout_height="81dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d9d9d9"
                    android:layout_alignParentTop="true"/>

                <ImageView
                    android:id="@+id/iv_sug_goods2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:src="@drawable/demo_dsxg02"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_sug_goods2"
                    android:padding="10dp"
                    android:text="@string/goods_sug02_name"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_sug_goods2"
                    android:layout_toRightOf="@+id/iv_sug_goods2"
                    android:padding="10dp"
                    android:text="@string/goods_sug02_price"
                    android:textColor="#ec6159"
                    android:textSize="14dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_goods_sug03"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d9d9d9"
                    android:layout_alignParentTop="true"/>

                <ImageView
                    android:id="@+id/iv_sug_goods3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:src="@drawable/demo_dsxg03"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_sug_goods3"
                    android:padding="10dp"
                    android:text="@string/goods_sug03_name"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_sug_goods3"
                    android:layout_toRightOf="@+id/iv_sug_goods3"
                    android:padding="10dp"
                    android:text="@string/goods_sug03_price"
                    android:textColor="#ec6159"
                    android:textSize="14dp"/>
            </RelativeLayout>
            
            <Button
                android:id="@+id/btn_bug_now"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="#d9d9d9"
                android:text="@string/buy_now"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:enabled="false"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>