<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="93dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/iv_news_icon"
        android:layout_width="107dp"
        android:layout_height="73dp"
        android:src="@drawable/demo_news01"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/iv_news_icon"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:text="习近平1月：11月，这四次重要讲话一脉相承"
        android:textColor="#000000"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/tv_set_news_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_news_icon"
        android:gravity="bottom"
        android:text="置顶"
        android:textColor="@color/blue"
        android:textSize="11dp"/>
    <TextView
        android:id="@+id/tv_news_opic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/tv_set_news_top"
        android:layout_alignBottom="@+id/iv_news_icon"
        android:gravity="bottom"
        android:text="专题"
        android:textColor="#a4a4a4"
        android:textSize="11dp"/>
    <TextView
        android:id="@+id/tv_news_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_news_opic"
        android:layout_alignBottom="@+id/iv_news_icon"
        android:gravity="bottom"
        android:text="3人浏览"
        android:textColor="#a4a4a4"
        android:textSize="11dp"/>
</RelativeLayout>