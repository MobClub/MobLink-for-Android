<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/moblink_demo_novelIv"
        android:layout_width="80dp"
        android:layout_height="109dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/moblink_demo_novelNameTv"
            android:layout_width="wrap_content"
            android:textColor="@color/moblink_demo_text"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/moblink_demo_novelAuthorTv"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/moblink_demo_text"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/moblink_demo_novelDescTv"
            android:layout_width="wrap_content"
            android:textColor="@color/moblink_demo_gray"
            android:textSize="13sp"
            android:paddingTop="10dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>