<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <com.mob.tools.gui.AsyncImageView
            android:id="@+id/moblink_demo_userIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/moblink_demo_default_user"/>

        <TextView
            android:id="@+id/moblink_demo_usernameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/moblink_demo_userIv"
            android:text="马皮皮"
            android:textColor="@color/moblink_demo_text"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moblink_demo_usernameTv"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/moblink_demo_userIv"
            android:text="高颜值用户"
            android:textColor="@color/moblink_demo_gray"
            android:textSize="13sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/moblink_demo_bg"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp">

        <LinearLayout
            android:id="@+id/moblink_demo_layout_invite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/moblink_demo_tatol_invite"
                    android:layout_height="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/moblink_demo_total_invite"
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/moblink_demo_numTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="0"
                android:textColor="@color/moblink_demo_text"
                android:textSize="35sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moblink_demo_layout_income"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/moblink_demo_total_income"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/moblink_demo_total_income"
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/moblink_demo_getMoneyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="0"
                android:textColor="@color/moblink_demo_text"
                android:textSize="35sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="地推二维码"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/moblink_demo_gray"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/moblink_demo_local_qrcodeIv"
        android:layout_width="200dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/moblink_demo_text"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:text="扫描下载应用"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/moblink_demo_text"
        android:layout_gravity="center_horizontal"
        android:textSize="13sp"
        android:paddingTop="5dp"
        android:text="无需填写邀请码，扫码后自动绑定地推人员账户"
        android:layout_height="wrap_content"/>


</LinearLayout>