<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/moblink_demo_splash_picIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/moblink_demo_splash_1"/>

        <TextView
            android:id="@+id/moblink_demo_splash_titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/moblink_demo_splash_title1"
            android:textColor="@color/moblink_demo_text"
            android:textSize="@dimen/moblink_demo_splash_title"/>

        <TextView
            android:id="@+id/moblink_demo_splash_descTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="@string/moblink_demo_splash_desc1"
            android:textColor="@color/moblink_demo_text"
            android:textSize="@dimen/moblink_demo_splash_desc"/>

    </LinearLayout>

    <Button
        android:id="@+id/moblink_demo_splash_goto"
        android:layout_width="241dp"
        android:layout_height="50dp"
        android:layout_below="@+id/moblink_demo_splash_indicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:background="@drawable/moblink_demo_btn_blue_round"
        android:text="@string/moblink_demo_splash_goto"
        android:textColor="#fff"
        android:textSize="16sp"
        android:visibility="invisible"/>

</RelativeLayout>