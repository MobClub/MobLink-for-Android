<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@drawable/moblink_demo_game_bg"
                android:paddingLeft="2dp"
              android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/moblink_demo_rlUser1"
        android:layout_width="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/moblink_demo_game_userTv1"
            android:layout_width="65dp"
            android:textSize="12sp"
            android:layout_below="@+id/moblink_demo_userIv_bg1"
            android:background="@drawable/moblink_demo_game_username_bg"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:layout_marginTop="-5dp"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:layout_height="22dp"/>
        <com.mob.tools.gui.AsyncImageView
            android:id="@+id/moblink_demo_game_userIv1"
            android:layout_width="51dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:layout_height="51dp"/>

        <ImageView
            android:id="@+id/moblink_demo_userIv_bg1"
            android:layout_width="68dp"
            android:background="@drawable/moblink_demo_game_user1"
            android:layout_height="68dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/moblink_demo_rlUser1"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/moblink_demo_game_userTv2"
            android:layout_width="65dp"
            android:textSize="12sp"
            android:layout_below="@+id/moblink_demo_userIv_bg2"
            android:background="@drawable/moblink_demo_game_username_bg"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:layout_marginTop="-5dp"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:layout_height="22dp"/>

        <com.mob.tools.gui.AsyncImageView
            android:id="@+id/moblink_demo_game_userIv2"
            android:layout_width="51dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:layout_height="51dp"/>
        <ImageView
            android:id="@+id/moblink_demo_userIv_bg2"
            android:layout_width="68dp"
            android:background="@drawable/moblink_demo_game_user2"
            android:layout_height="68dp"/>

    </RelativeLayout>
    
    <ImageView
        android:id="@+id/moblink_demo_game_share"
        android:layout_width="40dp"
        android:src="@drawable/moblink_demo_game_share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="80dp"
        android:layout_height="45dp"/>

</RelativeLayout>