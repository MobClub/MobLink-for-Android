<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/moblink_demo_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/moblink_demo_posTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/moblink_demo_text"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/moblink_demo_dateTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/moblink_demo_text"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/moblink_demo_sourceTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:text="/"
            android:textColor="@color/moblink_demo_text"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/moblink_demo_numTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/moblink_demo_blue"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>